<% include ../partials/head %>

  <div class="container">
    <div class="row p-4">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-body">
            <h1>Publicar un Producto</h1>
            <form method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label for="category_name">Categoria:</label>
                <input type="text" id="category_name" class="form-control" name="category_name">
              </div>
              <div class="form-group">
                <label for="product_name">Nombre:</label>
                <input type="text" id="product_name" class="form-control" name="product_name">
              </div>
              <div class="form-group">
                <label for="product_price">Precio:</label>
                <input type="text" id="product_price" class="form-control" name="product_price">
              </div>
              <div class="form/group">
              <input id="archivo" type="file" name="img" class="file">
              </div>
              <button type="submit" class="btn btn-success">Publicar Producto</button>
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

<% include ../partials/footer %>
